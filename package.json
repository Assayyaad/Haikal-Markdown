{
  "displayName": "Haikal Markdown",
  "name": "haikal-markdown",
  "version": "0.1.0",
  "description": "أدوات هيكلية صارمة لملفات ماركداون",
  "homepage": "https://haikal.assayyaad.pro",
  "repository": "github:Assayyaad/Hakial-Markdown",
  "bugs": {
    "url": "https://github.com/Assayyaad/Hakial-Markdown/issues"
  },
  "keywords": [
    "markdown",
    "parse",
    "format",
    "validate",
    "strict"
  ],
  "type": "module",
  "main": "./src/exports.js",
  "types": "./types/exports.d.ts",
  "exports": {
    ".": {
      "import": "./src/exports.js",
      "default": "./src/exports.js",
      "types": "./types/exports.d.ts"
    },
    "./content": {
      "import": "./src/func/محتوى.js",
      "default": "./src/func/محتوى.js",
      "types": "./types/func/محتوى.d.ts"
    },
    "./parse": {
      "import": "./src/func/تحليل.js",
      "default": "./src/func/تحليل.js",
      "types": "./types/func/تحليل.d.ts"
    },
    "./types": {
      "import": "./src/أنواع.js",
      "default": "./src/أنواع.js",
      "types": "./types/أنواع.d.ts"
    }
  },
  "files": [
    "src",
    "types",
    "LICENSE",
    "*.md"
  ],
  "scripts": {
    "types": "workspace ./workspace.json -c -t",
    "docs": "workspace ./workspace.json -c -t -d",
    "format": "prettier . --write",
    "test": "mocha test/**/*.test.js"
  },
  "devDependencies": {
    "@disqada/workspace": "^1.6.2",
    "mocha": "^11.7.2",
    "obsidian": "^1.8.7",
    "prettier": "^3.6.2"
  }
}
